<%- include("partials/header") -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="newTitle">Title</label>
    <input class="form-control" id="newTitle" type="text" name="newTitle" value="">
  </div>

  <div class="form-group">
    <label for="newPost">Post</label>
    <textarea class="form-control" id="newPost" type="text" name="newPost" rows="8" cols="80"></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

